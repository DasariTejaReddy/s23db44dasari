block content
  h1= title
 
  if (toShow == null)
    h2 No instance to delete
  else
    - let Dogsid = toShow._id
    - let shoeName = toShow.shoeName
    - let shoePrice = toShow.shoePrice
    - let shoemadein = toShow.shoemadein
    - let actionid = "/resource/shoe/" + Dogsid
    script let actionid = "#{actionid}"
    div
      div.row
        div(class='DogsAttr mr-3') Dogs ID is:
        div #{Dogsid}
      div.row
        div(class='DogsAttr mr-3') Dogs Dogname is:
        div #{Dogname}
      div.row
        div(class='DogsAttr mr-3') Dogs dogsize is:
        div #{dogsize}
      div.row
